<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".UvodnaActivita"
    android:background="@drawable/ice"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/vitaj"
        android:id="@+id/vitajteView"
        android:layout_weight="0.05"
        android:textSize="25dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold|italic"
        android:visibility="visible"
        android:gravity="center_vertical|center_horizontal|bottom" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/vstup"
        android:id="@+id/buttonVstup"
        android:layout_gravity="center_horizontal|bottom"
        android:onClick="enter"
        android:textStyle="bold"
        android:textSize="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/refo" />

</LinearLayout>
